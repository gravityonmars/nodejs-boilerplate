header.app-header(headroom)
  #header-container
    h1#logo
      a(href='/')
        img(src=config['logo']).logo
        span.logo-link=t('header.logo')

    .user-nav.btn-group
      .user
      a(href='/signin').login.pull-right.anonymous-user
        i.icon-signin
        span= t('header.login')
      a(href='/signup').login.pull-right.anonymous-user
        i.icon-user
        span= t('header.signup')
